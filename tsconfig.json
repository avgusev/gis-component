{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "allowJs": true,
    "target": "es6",
    "strict": false,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "noImplicitUseStrict": false,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*","declaration.d.ts", ".storybook/StoreDecorator.tsx"],
  "exclude": ["node_modules", "dist", "build", "src/**/*.test.tsx", ".storybook", "src/stories"]
}
